<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParseActivity">

    <TextView
        android:id="@+id/assets_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/assets_value_label"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/assets_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/euro_sign"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/assets_value_label"
        android:layout_marginTop="14dp"
        android:layout_marginStart="22dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/money_spent_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/money_spent_label"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/assets_value"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/money_spent_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/euro_sign"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/money_spent_label"
        android:layout_marginTop="14dp"
        android:layout_marginStart="22dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
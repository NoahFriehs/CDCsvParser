<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.AboutUsActivity">

    <TextView
        android:id="@+id/tv_contributers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Contributers:"
        />
    <TextView
        android:id="@+id/nameString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_contributers"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Names:"
        />
    <TextView
        android:id="@+id/tv_contributers_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/nameString"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Bicha Stefan, Friehs Noah, Dennig Rosa"
        />
    <TextView
        android:id="@+id/gitString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_contributers_names"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Git:"
        />
    <TextView
        android:id="@+id/tv_contributers_git_stefan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/gitString"
        app:layout_constraintStart_toStartOf="parent"
        android:text="https://git-iit.fh-joanneum.at/bichaste20"
        />
    <TextView
        android:id="@+id/tv_contributers_git_noah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_contributers_git_stefan"
        app:layout_constraintStart_toStartOf="parent"
